{
  "name": "@eddalabs/starter-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "counter-cli",
    "counter-contract",
    "frontend-vite-react"
  ],
  "scripts": {
    "compact": "turbo run compact",
    "build": "turbo run build",
